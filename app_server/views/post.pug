extends layout

block content
   .container-fluid.mt-5.mb-5
      .row.mt-5
         .col
            h1#main-title-light Nuevo Proyecto
            .underlines
               #underlineProjects
      if message != ""
         .row.mt-5.justify-content-center
            .col-md-7
               .alert.alert-success(role="alert")
                  p #{message}
      .row.justify-content-center.mt-5
         .col-lg-6
            form.needs-validation.mb-5(novalidate action="/projects/new-post" method = "POST")
               .form-row.justify-content-center
                  .col-sm.mb-3
                     input.form-control#validationTooltip01(type="text" name= "title" required)
                     label.tooltip-transform(for="validationTooltip01") Título
                     .invalid-tooltip
                        Please Ingresa un título
               .form-row.justify-content-center
                  .col-sm.mb-3
                     input.form-control#validationTooltip02(type="text" name= "descriptionShort" minlength="4" maxlength="125" required)
                     label.tooltip-transform(for="validationTooltip02") Descripción corta
                     .invalid-tooltip
                        Please Ingresa una descripción corta
               .form-row.justify-content-center
                  .col-sm.mb-3
                     input.form-control#validationTooltip02(type="text" name= "image" required)
                     label.tooltip-transform(for="validationTooltip02") Nombre de la imagen de portada
                     .invalid-tooltip
                        Please Ingresa el nombre de la imagen de portada
               .form-row.justify-content-center.align-items-center
                  .col-sm.mb-3
                     textarea.form-control#validationTooltip05(rows = 5 required name="descriptionLong")
                     label.tooltip-transform(for="validationTooltip05") Descripción larga
                     .invalid-tooltip
                        Please Ingresa una descripción larga
               .form-row.justify-content-center.align-items-center
                  .col-sm-4.mb-3
                     select#category.form-control(name="category" required)
                        option(value="illustration") Illustración
                        option(value="3D") Modelado 3D
                        option(value="web") Desarrollo Web
                        option(value="motiongraphics") Mtion Graphics
                        option(value="photo") Fotografía
                        option(value="audio") Audio
                        option(value="apps") Apps
                  .col-sm-8.mb-3
                     input.form-control#validationTooltip04(type="text" name= "link" required)
                     label.tooltip-transform(for="validationTooltip04") Link externo
                     .invalid-tooltip
                        Please Ingresa una descripción corta
               .form-row.justify-content-center.align-items-center
                  .col-md-4.mt-3
                     .button-submit.text-center
                        button#send-btn(type="submit" data-toggle="tooltip" data-placement="bottom" title="Postear") 
                           i.fas.fa-syringe
                  